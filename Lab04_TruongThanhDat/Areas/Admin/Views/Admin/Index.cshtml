@model IEnumerable<Lab04_TruongThanhDat.Models.Product>

@{
	ViewData["Title"] = "Index";
}

<h1>ADMIN</h1>

<p>
	<a asp-action="Create">Thêm Sản Phẩm Mới</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ImageUrl)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Category)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					<img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="150px"/>
				</td>
				<td>
					@if (item.Category != null)
					{
						@item.Category.Name
					}
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
				</td>
			</tr>
		}
	</tbody>
</table>
